<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_weather_content"
    android:background="#dd0D67A9">

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageViewWeatherIcon"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>
            <!--
            app:srcCompat="@drawable/ic_cloud_sun_rain_solid"
            -->


        <TextView
            android:id="@+id/textViewFutureTemperature"
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:text="22째/6째"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHistoricMedia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="@string/historic_media" />

        <TextView
            android:id="@+id/textViewHistoricTemperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="21째/9째" />


</LinearLayout>