<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_trasy_content_maps_title"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.yanzhenjie.album.widget.SquareImageView
            android:id="@+id/iv_trasy_content_maps_image"
            style="@style/Album.MatchParent"
            android:layout_height="281dp"
            android:contentDescription="@string/menu_gallery"
            android:scaleType="centerCrop"></com.yanzhenjie.album.widget.SquareImageView>

</LinearLayout>